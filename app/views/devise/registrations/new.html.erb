<div class="main">

	<div class="user-form">
	<h2>Sign up</h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div>	<%= f.email_field :email, placeholder: 'Email', autofocus: true %></div>

	  <div><% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
	    <%= f.password_field :password, placeholder: 'Password', autocomplete: "off" %></div>

	  <div><br />
	    <%= f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "off" %></div>

	  <div><%= f.submit "Sign up" %></div>
	<% end %>

	</div>
</div>

<%= render "devise/shared/links" %>
